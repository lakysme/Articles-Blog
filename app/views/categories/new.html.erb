<h1 class="flex justify-center text-3xl mt-9 text-indigo-500 font-mono">Create a new category</h1>
<div class="w-full">  
    <div class="container justify-center mx-auto">
      <%= render 'shared/errors', obj: @category %>

      <%= form_with(model: @category, local: true) do |f| %>
        <div class="mb-6">
          <p class="block mb-2 text-xl font-medium text-indigo-600 dark:text-white">
            <%= f.label :name, "Category name" %>
          </p>
          <p class="bg-gray-50 border border-gray-300 text-indigo-500 text-sm rounded-lg focus:ring-violet-300 focus:border-violet-300 block w-full p-2.5" placeholder="Enter a name">
            <%= f.text_field :name %>
          </p>
        </div>

        <div class="text-white text-base bg-indigo-400 hover:bg-violet-300 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg w-full sm:w-auto px-5 py-2.5 text-center p-10">
          <%= f.submit %>
        </div>
      <% end %>
    </div>
    <div class="flex justify-center font-mono text-indigo-500 hover:text-indigo-500/50 text-xl my-10 mb-44">
        <%= link_to 'Cancel and return to articles listing', articles_path %>
    </div>  
</div>

<%= render 'articles/footer' %>