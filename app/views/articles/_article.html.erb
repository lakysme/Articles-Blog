<% @articles.each do |article| %>
  <div class="container mx-auto my-4 max-w-sm bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
      <div class="p-5">
          <a href="#">
              <h5 class="mb-2 text-2xl font-bold tracking-tight text-indigo-700 dark:text-white hover:underline hover:text-indigo-400"><%= link_to article.title, article_path(article) %></h5>
          </a>
          <p class="mb-3 font-normal text-indigo-700 dark:text-gray-400 truncate"><%= article.description %></p>
          <p class="mb-3 font-normal text-sm text-center italic text-indigo-700 dark:text-gray-400">By <%= article.user.username %></p>

          <p class="mb-3 font-normal text-sm text-center italic text-indigo-700">Created <%= time_ago_in_words(article.created_at) %> ago,
          edited <%= time_ago_in_words(article.updated_at) %> ago</p>

          <div class="flex justify-center mt-8">
            <button type="button" class="py-2.5 px-5 mr-2 mb-2 text-sm font-medium focus:outline-none rounded-lg text-indigo-700 hover:bg-indigo-300 border border-gray-200 hover:text-white focus:z-10 focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700"><%= link_to 'Show', article_path(article) %></button>

            <button type="button" class="py-2.5 px-5 mr-2 mb-2 text-sm font-medium focus:outline-none rounded-lg text-indigo-700 hover:bg-indigo-300 border border-gray-200 hover:text-white focus:z-10 focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700"><%= link_to 'Edit', edit_article_path(article) %></button>

            <button type="button" class="py-2.5 px-5 mr-2 mb-2 text-sm font-medium focus:outline-none rounded-lg text-indigo-700 hover:bg-indigo-300 border border-gray-200 hover:text-white focus:z-10 focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700"><%= link_to 'Delete', article_path(article), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></button>
          </div>  
      </div>
  </div>
<% end %>