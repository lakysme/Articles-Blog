<h1 class="flex justify-center text-indigo-500 text-3xl mt-9 font-mono">Showing article details</h1>

<div class="container justify-center mx-auto m-2 mt-5 p-6 py-10 h-auto rounded-lg space-y-4 text-m text-left text-indigo-700 text-lg bg-violet-200/50">
  <div>
    <p class="flex justify-center text-base mb-3">By <%= @article.user.username %></p>
    <p class="flex justify-center mb-2"><%= link_to gravatar_for(@article.user), user_path(@article.user) %>
    </p>
    <div class="flex justify-center text-base">
      <% if @article.categories.any? %>
        <div class=""><%= render @article.categories %></div>
      <% end %>
    </div>
  </div>
  <p class="basis-1/3"><strong>Title: </strong><%= @article.title %></p>
  <p class="basis-1/3"><strong>Description: </strong><%= @article.description %></p>
</div>

  <div class="flex space-x-4 justify-center text-indigo-500 text-xl font-mono my-10 mb-72">
    <% if logged_in? && (@article.user == current_user || current_user.admin?) %>
      <p class="hover:text-indigo-500/50 "><%= link_to 'Edit', edit_article_path(@article) %></p>
      <p> | </p>
      <p class="hover:text-indigo-500/50 "><%= link_to 'Delete', article_path(@article),  data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></p>
      <p> | </p>
    <% end %>
    <p class="hover:text-indigo-500/50 "><%= link_to 'Return to articles listing', articles_path %></p>
  </div>

<%= render 'footer' %>