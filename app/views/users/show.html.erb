<div class="container relative">
  <h1 class="flex justify-center text-3xl my-9 text-indigo-500 font-mono">
    <%= @user.username %>'s profile
  </h1>
  
  <div class="flex mt-3 justify-center">
    <%= gravatar_for @user, size: 200 %>
  </div>

  <% if logged_in? && @user == current_user %>
    <div class="p-5 flex place-content-center">
      <button type="button" class="flex justify-center py-2.5 px-5 mr-2 mb-2 text-sm font-medium rounded-lg text-indigo-700 hover:bg-indigo-300 border border-gray-200 hover:text-white">
        <%= link_to 'Edit your profile', edit_user_path(@user) %>
      </button>
      <button type="button" class="flex justify-center py-2.5 px-5 mr-2 mb-2 text-sm font-medium rounded-lg text-indigo-700 hover:bg-red-200 border border-gray-200 hover:text-gray-700">
        <%= link_to 'Delete profile', user_path(current_user), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
      </button>
    </div>
  <% end %>
  
  <h3 class="flex justify-center text-3xl my-5 text-indigo-500 font-mono">Articles</h3>

  <div class="apple_pagination flex justify-center tracking-widest text-indigo-700  font-mono text-xl">
    <%= will_paginate @articles, :container => false %>
  </div>
  
  <%= render 'articles/article' %>

  <div class="apple_pagination flex justify-center tracking-widest text-indigo-700  font-mono text-xl mb-2">
    <%= will_paginate @articles, :container => false %>
  </div>
  
  <div class="w-full">
    <div class="flex justify-center font-mono text-indigo-500 hover:text-indigo-500/50 text-xl mt-4">
      <%= link_to 'Return to articles listing', articles_path %>
    </div>
  </div>
  
<%= render 'articles/footer' %>

</div>